/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: start;
  justify-content: space-between;
  padding: 30rpx 0;
  box-sizing: border-box;
} 

.meta{
    display:flex;
    flex-direction: column;
    align-items:left;
    background: #EEEEEE;
}

.title-text {
  font-size: 38rpx;
  font-weight: bold;
}

.price-text {
    color: #f93e40;
    font-size: 36rpx;
    font-weight: bold;
}

.normal-text {
  font-size: 36rpx;
}

.input-line {
  display: inline-block;
  border: 1rpx solid #A8A8A8;
}

.input-box {
  display: block;
  border: 1rpx solid #A8A8A8;
  width: 100%;
}

button{
    margin: 30rpx;
}