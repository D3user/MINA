.container {
    background: #1AAE18;
    padding-top: 0rpx;
    padding-bottom: 0rpx;
}
.content {
    background: #EFEFF4;
}

.search-bar {
    width:100%;
    height: 60rpx;
    padding-top: 10rpx; 
    padding-bottom: 15rpx; 
    background: #1AAE18;
}

.search-box {
    display: flex;
    height: 100%;
    margin-left: 25rpx;
    margin-right: 25rpx;
    background: white;
}

.search-box image {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.search-box input {
    font-size: 36rpx;
    height: 100%;
    width: 80%;
    margin-left: 20rpx;
}

.category-bar {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    background: white;
    white-space: nowrap;
    display: block;
    border-bottom: 1rpx solid #EEEEEE;
}

.category-label {
    border-radius: 16px;
    background-color: rgba(26, 174, 24, 0.5);
    font-size: 30rpx;
    display: inline-block;
    margin-left: 20rpx;
    padding: 10rpx;
    color: white;
}

.category-label.selected {
    background-color: #1AAE18;
}

.add-button {
    position: fixed;
    bottom: 30rpx;
    right: 40rpx;
    width: 80rpx;
    height: 80rpx;
    z-index: 300;
}

.list-item {
    display: block;
    white-space: nowrap;
    background: white;
    padding: 25rpx;
    margin-bottom: 16rpx;
}

.list-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
    padding-bottom: 18rpx;
    border-bottom: 1rpx solid #EEEEEE;
}

.list-title {
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}

.list-price {
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}

.list-img {
    width: 100%;
    height: 200rpx;
}

.slide-image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
}

.list-description {
    display: block;
    white-space: normal;
    padding-top: 20rpx;
    font-size: 30rpx;
    color: #9b9b9b;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 3; /* number of lines to show */
}
